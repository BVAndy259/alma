<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondo_login"
            android:scaleType="centerCrop" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DD001A1A" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                <TextView
                        android:id="@+id/tvTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titulo_dashboard"
                        android:fontFamily="@font/jomolhari_regular"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reporte_dashboard"
                        android:fontFamily="@font/jomolhari_regular"
                        android:textColor="#E0B0A0"
                        android:textSize="14sp"
                        android:layout_below="@id/tvTitulo"
                        android:layout_marginTop="4dp"/>

                <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icono_alma"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trafico"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#26FFFFFF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="8dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/visitas_totales"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15,840"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#FFFFFF"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#26FFFFFF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:layout_marginStart="8dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sesiones"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12,150"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#FFFFFF"
                                android:textSize="26sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comportamiento"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#26FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:weightSum="2">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/activos"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#B3FFFFFF"
                                android:textSize="13sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8,420"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#E0B0A0"
                                android:textSize="22sp"
                                android:textStyle="bold"/>
                    </LinearLayout>

                    <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#4DFFFFFF"
                            android:layout_marginHorizontal="16dp"/>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nuevos"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#B3FFFFFF"
                                android:textSize="13sp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3,105"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#FFFFFF"
                                android:textSize="22sp"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#26FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="32dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                    <TextView
                            android:id="@+id/tvTasaLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interaccion"
                            android:fontFamily="@font/jomolhari_regular"
                            android:textColor="#B3FFFFFF"
                            android:textSize="14sp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="68.5%"
                            android:fontFamily="@font/jomolhari_regular"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_below="@id/tvTasaLabel"
                            android:layout_marginTop="2dp"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fuente"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#B3FFFFFF"
                                android:textSize="12sp"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orgánico"
                                android:fontFamily="@font/jomolhari_regular"
                                android:textColor="#E0B0A0"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCIONES RÁPIDAS"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

            <Button
                    android:id="@+id/btnRendimiento"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/lbl_rendimiento"
                    android:fontFamily="@font/jomolhari_regular"
                    android:backgroundTint="#E0B0A0"
                    android:textColor="#002F2F"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="8dp"/>
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/lbl_dashboard"
                android:fontFamily="@font/jomolhari_regular"
                android:backgroundTint="#E0B0A0"
                android:textColor="#002F2F"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>