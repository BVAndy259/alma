<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondo_login"
            android:scaleType="centerCrop" />

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BB001A1A" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="32dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_registro"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitulo_registro"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textSize="14sp"
                    android:textColor="#E0B0A0"
                    android:layout_marginBottom="48dp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_nombres"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:layout_marginBottom="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/txt_nombres"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColorHint="#E0B0A0"
                    android:textColor="#E0B0A0"
                    android:background="#33FFFFFF"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_apellidos"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:layout_marginBottom="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/txt_apellidos"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColorHint="#E0B0A0"
                    android:textColor="#E0B0A0"
                    android:background="#33FFFFFF"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_correo"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:layout_marginBottom="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/txt_correo"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColorHint="#E0B0A0"
                    android:textColor="#E0B0A0"
                    android:background="#33FFFFFF"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="24dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_password_registro"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#E0B0A0"
                    android:layout_marginBottom="8dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/txt_password_registro"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColorHint="#E0B0A0"
                    android:textColor="#E0B0A0"
                    android:background="#33FFFFFF"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="48dp"/>

            <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="@string/btn_registrar"
                    android:fontFamily="@font/jomolhari_regular"
                    android:backgroundTint="#E0B0A0"
                    android:textColor="#002F2F"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

            <TextView
                    android:id="@+id/lblIrDashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_ir_dashboard"
                    android:fontFamily="@font/jomolhari_regular"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>